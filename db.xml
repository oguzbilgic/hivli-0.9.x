<database name="hivli" type="mysql" host="localhost" username="hivli" password="">
	
	<object name="user" table_name="user">
		<field name="id" type="id"/>
		<field name="name" type="string"/>
		<field name="username" type="string"/>
		<field name="password" type="string"/>
		<field name="email" type="string"/>
		<field name="added_time" type="timestamp"/>
		<field name="updated_time" type="timestamp"/>
	</object>
	
	<object name="post" table_name="post">
		<field name="id" type="id"/>
		<field name="title" type="string"/>
		<field name="body" type="text"/>
		<field name="user_id" type="object" object_name="user"/>
	</object>

</database>
